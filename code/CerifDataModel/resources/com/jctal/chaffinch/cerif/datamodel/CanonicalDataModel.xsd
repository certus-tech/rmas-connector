<xs:schema
  targetNamespace="http://www.certus-tech.com/2012/Chaffinch/CDM/1.0#"
  xmlns="http://www.certus-tech.com/2012/Chaffinch/CDM/1.0#"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  elementFormDefault="qualified">

  <xs:annotation>
    <xs:documentation xml:lang="en">
      XML schema for RMAS Connector common data model.

      Copyright (c) 2000-2012 Certus Technology Associates Limited.
      All Rights Reserved.

      Revision $Revision: 1.3 $
    </xs:documentation>
  </xs:annotation>

  <!-- Main structure. -->
  <xs:element name="cdm">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="field" type="field" minOccurs="1" maxOccurs="unbounded" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!-- Represents a single CDM field. -->
  <xs:complexType name="field">
    <xs:sequence>
      <xs:element name="name" type="xs:string" />
      <xs:element name="displayName" type="xs:string" />
    </xs:sequence>
    <xs:attribute name="cerifSupported" type="xs:boolean"/>
  </xs:complexType>

</xs:schema>
